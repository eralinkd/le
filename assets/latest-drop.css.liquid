.latest-drop {
    margin-top: -20px;
    padding: 0 0 50px 0;
    display: grid;
    gap: 40px;
}

.latest-drop > h2 {
    text-align: center;
    font-family: "Manrope";
    font-size: 28px;
    font-style: normal;
    font-weight: 600;
    line-height: 46px;
    color: {{ settings.main }};
}

.latest-drop > .exclusive-header {
    margin-top: 30px;
}

.latest-drop > .cards {
    width: 87%;
    margin: auto;
    overflow-x: hidden;
    overflow-y: hidden;
    height: auto;
}

.latest-drop > .cards > p {
    text-align: center;
    width: fit-content;
    margin: auto;
    margin-top: 28px;
    position: relative;
    line-height: 25.6px;
}

.latest-drop > .cards > p > a {
    font-family: "Manrope";
    font-size: 18px;
    font-style: normal;
    font-weight: 500;
    color: {{ settings.footer }};
}

.latest-drop > .cards > p > img {
    position: absolute;
    left: -70px;
    top: -3px;
    cursor: pointer;
}

.latest-drop > .cards > p > img.right {
    left: auto;
    right: -70px;
}

.latest-drop .products-container {
    /* width: 87%; */
    margin: auto;
    display: flex;
    /* overflow: hidden; */
    /* gap: 3.5%; */
    flex-wrap: nowrap;
    overflow-x: scroll;
    overflow-y: hidden;
    /* height: 10vh; */
    width: 100%;
    justify-content: space-between;
    transition: transform 0.5s ease;
}

/* Hide scrollbar for Chrome, Safari and Opera */
.latest-drop .products-container::-webkit-scrollbar {
	display: none !important;
}
  
/* Hide scrollbar for IE, Edge and Firefox */
.latest-drop .products-container {
	-ms-overflow-style: none !important;  /* IE and Edge */
	scrollbar-width: none !important;  /* Firefox */
}

.latest-drop.without-margin {
    margin-top: 40px;
}

#latest-drop {
    margin-top: -30px;
}






@media only screen and (max-width: 600px) {
    .latest-drop>.cards {
        width: 100%;
    }

    .latest-drop {
        margin-top: -40px;
        gap: 10px;
    }

    .latest-drop.without-margin {
        margin-top: 40px;
    }

    .latest-drop>h2 {
        width: 80%;
        margin: auto;
    }
}