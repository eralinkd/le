.burger-menu {
    position: fixed;
    top: 0;
    left: 0;
    width: 80%;
    height: 100vh;
    z-index: 100;
    transition: all 0.3s;
    background-color: {{ settings.main }};
}

.burger-menu.closed {
    left: -100vw;
}

.burger-menu .close {
    position: absolute;
    font-family: Manrope;
    left: 12px;
    top: 50%;
    transform: translateY(-50%);
    font-size: 36px;
    line-height: 36px;
    cursor: pointer;
    color: {{settings.light}};
}

.burger-menu h2 {
    position: relative;
    height: 60px;
    font-family: "Manrope";
    font-size: 20px;
    font-style: normal;
    font-weight: 600;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: {{ settings.main }};
    color: {{ settings.light }};
}

.burger-menu .menu-container .disclosure__button {
    background-color: transparent;
}

.burger-menu .search-form {
    width: 230px;
    box-sizing: border-box;
    display: flex;
    position: relative;
    align-items: center;
    transition: all ease-in-out .3s;
    margin: auto;
}

.burger-menu .search-form.closed {
    width: 32px;
}

.burger-menu .search-form > input[type="text"] {
    box-sizing: border-box;
    padding: 0;
    transition: all ease-in-out .3s;
    border: none;
    font-size: 14px;
    font-weight: 600;
    width: 100%;
    height: 32px;
    opacity: 0.75;
    padding: 0 0 0 32px;
}

.burger-menu .search-form > input[type="text"]:focus-visible {
    outline: none;
}

.burger-menu .search-form.closed > input[type="text"] {
    width: 0;
    padding: 0;
}

.burger-menu .search-form > input[type="submit"] {
    position: absolute;
    top: 50%;
    left: 0;
    transform: translateY(-50%);
    filter: invert(1);
    background-image: url('https://cdn.shopify.com/s/files/1/0668/3974/0631/files/header-search.svg?v=1698923075');
    background-position: 50% 50%;
    background-size: 70%;
    background-repeat: no-repeat;
    width: 32px;
    height: 32px;
    border: none;
    background-color: transparent;
    cursor: pointer;
    transition: all ease-in-out .3s;
}

.burger-menu .search-form.closed > input[type="submit"] {
    filter: invert(0);
    background-size: 100%;
}

.burger-menu .search-form .suggestions {
    position: absolute;
    width: 100%;
    left: 0;
    top: -8px;
    display: none;
    z-index: +1;
}

.burger-menu .search-form .suggestions.opened {
    display: block;
}

.burger-menu .search-form .suggestions a {
    display: flex;
    min-height: 80px;
    padding: 8px 10px;
    box-sizing: border-box;
    gap: 10px;
    align-items: center;
    border-bottom: 3px solid var(--main-main, rgba(6, 11, 38, 0.90));
    background: #e9e9e9de;
}

.burger-menu .search-form .suggestions a img{
    display: block;
    flex-shrink: 0;
    width: 50px;
    height: 50px;
    object-fit: contain;
}

.burger-menu .search-form .suggestions a p {
    font-size: 10px;
    font-weight: 600;
    line-height: 130%;
}

.burger-menu .menu-container.lang .dropdown-wrapper:hover .dropdown.lang,
.burger-menu .menu-container.lang:hover .dropdown.lang {
    display: flex;
}

.burger-menu .menu-container.lang .dropdown-wrapper {
    top: -4px;
}

.burger-menu .menu-container {
    position: relative;
}

.burger-menu .menu-container .dropdown {
    display: none;
    flex-direction: column;
    padding: 10px;
    gap: 7px;
    padding-left: 22px;
}

.burger-menu .menu-container .dropdown-wrapper {
    position: absolute;
    width: 200%;
    left: 50%;
    line-height: 120%;
    transform: translateX(-50%);
    top: -12.5px;
    padding-top: 56px;
    z-index: +1;
}

.burger-menu > ul > li > a {
    background-image: linear-gradient(currentColor, currentColor);
    background-position: center 100%;
    background-repeat: no-repeat;
    font-size: 16px;
    background-size: 0% 2px;
    transition: background-size .3s;
    color: {{ settings.light }};
}

.burger-menu > ul > li > a:hover {
    background-size: 100% 2px;
}

.burger-menu .disclosure__button {
    width: 58px;
    position: relative;
    height: fit-content;
    display: flex;
    flex-direction: column;
    padding-right: 6px;
    box-sizing: border-box;
    align-items: center;
    font-size: 18px;
    font-weight: 800;
    cursor: pointer;
    margin: auto;
    margin-top: 15px;
    margin-bottom: 20px;
    color: {{ settings.light }};
}

.burger-menu .disclosure__button::after {
    content: "";
    position: absolute;
    right: 2px;
    top: 8px;
    width: 14px;
    height: 14px;
    background-image: url(https://cdn.shopify.com/s/files/1/0668/3974/0631/files/header-lang-down.svg?v=1698923144);
    background-position: center;
    background-repeat: no-repeat;
    background-size: 100%;
}

.burger-menu .disclosure__button .disclosure__item a {
    color: {{ settings.light }};
}

.burger-menu > ul {
    display: flex;
    flex-direction: column;
    justify-content: center;
    gap: 30px;
    font-weight: 800;
    padding-left: 55px;
    margin-top: 40px;
}

#burger-overlay {
    width: 100vw;
    height: 100vh;
    position: fixed;
    top: 0;
    left: 0;
    background-color: rgba(0, 0, 0, 0.5);
    opacity: 1;
    z-index: +4;
}

#burger-overlay.closed {
    opacity: 0;
    z-index: -1;
}