.eco-care-wrapper > h2{
    text-align: center;
    font-family: "Manrope";
    font-size: 28px;
    font-style: normal;
    font-weight: 600;
    line-height: 46px;
    text-transform: uppercase;
    color: {{ settings.main }};
}

.eco-care {
    padding: 15px 0;
    display: grid;
    gap: 10px;
    width: 70vw;
    margin: auto;
    /* margin-top: -140px; */
}

.eco-care > .content {
    display: flex;
    justify-content: space-around;
    align-items: center;
    gap: 200px;
}

.eco-care > .content > video {
    display: block;
    width: 27vw;
    flex-shrink: 0;
    border-radius: 12px;
    user-select: none;
}

.eco-care > .content > div {
    padding: 4% 4%;
    /* width: 80%; */
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 40px;
    background-image: url('https://cdn.shopify.com/s/files/1/0668/3974/0631/files/eco-care-bg.png?v=1698921864');
    background-repeat: no-repeat;
    background-size: contain;
    background-position: center;
    /* margin-left: 20px; */
}

.eco-care > .content > div > h3 {
    text-align: center;
    line-height: 120%;
    font-family: "Manrope";
    font-size: 28px;
    font-style: normal;
    font-weight: 600;
    color: {{ settings.main }};
}

.eco-care > .content > div > p {
    text-align: center;
    font-size: 16px;
    font-style: normal;
    font-weight: 500;
    line-height: 150%;
    letter-spacing: 0.8px;
    color: {{ settings.main }};
}

.eco-care > .content > div > a {
    display: block;
    width: 42%;
    max-width: 200px;
    height: 45px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-family: "Manrope";
    font-size: 18px;
    font-style: normal;
    font-weight: 700;
    transition: all ease-out 0.6s;
    color: {{ settings.light }};
    background-color: {{ settings.main }};
}





@media only screen and (max-width: 600px) {
    .eco-care {
        padding: 40px 0;
    }

    .eco-care > .content {
        display: flex;
        flex-direction: column-reverse;
        gap: 50px;
    }

    .eco-care > .content > video {
        width: 100%;
    }

    .eco-care>.content>div {
        gap: 15px;
    }

    .eco-care>.content>div>p  {
        font-size: 12px;
    }
}