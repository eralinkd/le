.rework-wrapper > h2{
    text-align: center;
    font-family: "Manrope";
    font-size: 28px;
    font-style: normal;
    font-weight: 600;
    line-height: 46px;
    text-transform: uppercase;
    color: {{ settings.main }};
}

.rework-wrapper > .rework {
    padding: 15px 0;
    display: grid;
    gap: 10px;
    width: 63vw;
    margin: auto;
    /* margin-top: -140px; */
}

.rework > .content {
    display: flex;
    justify-content: space-around;
    align-items: center;
    gap: 200px;
}

.rework .slider-container {
    position: relative;
    overflow: hidden;
    width: 30%;
    flex-shrink: 0;
}

.rework .slider-container > img {
    user-select: none;
}

.rework > .content > .slider-container > img {
    display: block;
    width: 100%;
}

.rework .content .overlay-image {
    position: absolute;
    top: 0;
    left: 50%;
    transform: translateX(-50%);
}

.rework .content .slider-handle {
    position: absolute;
    width: 8px;
    height: 100%;
    left: 50%;
    top: 0px;
    transform: translateX(-2px);
    cursor: ew-resize;
    background-color: {{ settings.main }};
}

.rework .content .slider-circle {
    width: 36px;
    height: 36px;
    border-radius: 50%;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    background-image: url('https://cdn.shopify.com/s/files/1/0668/3974/0631/files/rework-slider-icons.svg?v=1698922268');
    background-size: 50%;
    background-repeat: no-repeat;
    background-position: center;
    background-color: {{ settings.main }};
}

.rework > .content > .description {
    padding: 4% 4%;
    /* width: 80%; */
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 40px;
    background-image: url('https://cdn.shopify.com/s/files/1/0668/3974/0631/files/rework-bg.png?v=1698922221');
    background-repeat: no-repeat;
    background-size: contain;
    background-position: center;
    /* margin-left: 20px; */
}

.rework > .content > .description > h3 {
    font-family: "Manrope";
    font-size: 28px;
    font-style: normal;
    font-weight: 600;
    color: {{ settings.main }};
}

.rework > .content > .description > p {
    text-align: center;
    font-size: 16px;
    font-style: normal;
    font-weight: 500;
    line-height: 150%;
    letter-spacing: 0.8px;
    color: {{ settings.main }};
}

.rework > .content > .description > a {
    display: block;
    width: 42%;
    max-width: 200px;
    height: 45px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-family: "Manrope";
    font-size: 18px;
    font-style: normal;
    font-weight: 700;
    transition: all ease-out 0.6s;
    color: {{ settings.light }};
    background-color: {{ settings.main }};
}

.rework > .content > .description > a:hover {
    background-color: {{ settings.secondary }};
    color: {{ settings.main }};
}


.rework > .content > .description > a:active {
    color: {{ settings.light }};
    background-color: {{ settings.dark }};
}





@media only screen and (max-width: 600px) {
    .rework-wrapper>.rework {
        padding: 40px 0;
    }

    .rework > .content {
        display: flex;
        flex-direction: column;
        gap: 50px;
    }

    .rework .slider-container {
        width: 100%;
    }

    .rework>.content>.description {
        gap: 15px;
    }

    .rework>.content>.description>p  {
        font-size: 12px;
    }

    .rework>.content>.description>a {
        width: 140px;
        height: 40px;
        font-size: 14px;
    }
}