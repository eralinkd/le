.banner {
    height: 75vh;
    background-image: url('banner-bg.png');
    background-size: 100%;
    background-position: top;
    background-repeat: no-repeat;
    display: flex;
    justify-content: center;
    align-items: center;
}

.banner > a {
    width: 228px;
    height: 75px;
    display: flex;
    justify-content: center;
    align-items: center;
    cursor: pointer;
    font-family: 'Arbutus', serif;
    font-size: 21px;
    transition: all ease-out 0.6s;
    background-color: '{{ settings.yellow }}';
    color: '{{ settings.red }}';
}

.banner > a:hover {
    color: #fff;
    background-color: '{{ settings.header-bg-hover }}';
}

.banner > a:active {
    background-color: '{{ settings.red }}';
    color: '{{ settings.yellow }}';
}