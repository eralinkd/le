    position: absolute;
    left: 0;
  }
  
  input[type="range"]::-webkit-slider-thumb {
    -webkit-appearance: none;
    -moz-appearance: none; /* Для Mozilla Firefox */
    -ms-appearance: none; /* Для Microsoft Edge и Internet Explorer */
    appearance: none;
    height: 12px;
    width: 12px;
    top: -1px;
    border-radius: 50%;
    background: #D9D9D9;
    cursor: pointer;
    margin-top: -5px;
    position: relative;
    z-index: 1;
  }
  
  input[type="range"]::-webkit-slider-runnable-track {
    width: 100%;
    height: 2px;
    background: #fff;
    border-radius: 3px;
    border: none;
  }

