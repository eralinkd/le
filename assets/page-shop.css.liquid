.open-filters {
    position: relative;
    z-index: 3;
    margin: auto;
    width: 160px;
    height: 46px;
    justify-content: center;
    align-items: center;
    border-radius: 5px;
    font-family: Manrope;
    font-size: 15px;
    font-style: normal;
    font-weight: 700;
    display: none;
    color: {{ settings.light }};
    background-color: {{ settings.main-header-type-2 }};
}

.open-filters:hover {
    background-color: {{ settings.main }};
    color: {{ settings.light }};
}

.open-filters:active {
    color: {{ settings.light }};
    background-color: {{ settings.dark }};
}

#filters-close {
    display: none;
}

#shop-overlay {
    display: none;
}





@media only screen and (max-width: 600px) {
    .shop {
        padding: 148px 0 0 0;
    }

    .shop.padding {
        padding: 0;
    }

    .shop .filters-box {
        position: fixed;
        top: 0;
        left: 0;
        margin-top: 0;
        width: 80%;
        height: 100vh;
        display: flex;
        flex-direction: column;
        transition: all ease-in-out .3s;
        z-index: +5;
        background-color: #fff;
        padding: 20px;
        box-sizing: border-box;
    }

    .shop .filters-box.closed {
        left: -100vw;
    }

    .shop .filters-box h3 {
        font-size: 24px;
        margin-bottom: 8px;
        position: relative;
    }

    .shop .filters-box .divider {
        display: none;
    }

    .shop .filters-box .filters>li {
        margin: auto;
        width: 85%;
        font-size: 18px;
        box-sizing: border-box;
    }

    .shop .filters-box .filters>ul {
        width: 85%;
        box-sizing: border-box;
        margin: auto;
        margin-top: -10px;
    }

    .shop .filters-box .filters>li:hover {
        background-color: {{settings.main-header-type-2}};
    }

    .open-filters {
        display: flex;
        margin-bottom: 30px;
    }

    .shop .products {
        padding: 0;
    }

    .shop .products .all-products-container {
        grid-template-columns: repeat(2,1fr);
        row-gap: 10px;
    }

    #filters-close {
        display: block;
        position: absolute;
        font-family: Manrope;
        left: -5px;
        top: 50%;
        transform: translateY(-50%);
        font-size: 36px;
        line-height: 36px;
        cursor: pointer;
        color: {{settings.main}};
    }

    #shop-overlay {
        display: block;
        width: 100vw;
        height: 100vh;
        position: fixed;
        top: 0;
        left: 0;
        background-color: rgba(0, 0, 0, 0.5);
        opacity: 1;
        z-index: +4;
    }
    
    #shop-overlay.closed {
        opacity: 0;
        z-index: -1;
    }
}