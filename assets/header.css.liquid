.header {
    width: 100vw;
    position: fixed;
    height: 72px;
    box-sizing: border-box;
    display: flex;
    justify-content: space-evenly;
    align-items: center;

    transition: all ease-in-out .5s;

    z-index: 4;
    top: 20px;
}

.header .logo {
    height: 40px;
    cursor: pointer;
}

.header > ul {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 5vw;
    font-size: 15px;
    font-weight: 800;
}

.header > .icons {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 40px;
}

.header > .icons .disclosure__button {
    width: 45px;
    height: 32px;
    display: flex;
    padding-left: 6px;
    box-sizing: border-box;
    align-items: center;
    background-image: url('https://cdn.shopify.com/s/files/1/0668/3974/0631/files/header-lang-down.svg?v=1698923144');
    background-position: 27px 50%;
    background-repeat: no-repeat;
    font-size: 14px;
    font-weight: 800;
    cursor: pointer;
    color: {{ settings.light }};
}

.header > .icons img {
    cursor: pointer;
    display: block;
    
    transition: all ease-in-out .1s;
}

.header > .icons .cart {
    position: relative;
}

.header > .icons .cart::after {
    content: "";
    display: block;
    position: absolute;
    right: 0;
    top: 0;
    width: 6px;
    height: 6px;
    border-radius: 50%;
    background-color: rgba(255, 0, 0, 0.5);
    transition: all ease-in-out .1s;
}

.header > .icons .cart.empty::after {
    opacity: 0;
}

.header > .icons img:hover {
    transform: scale(1.1);
}

.header > ul > li > a {
    background-image: linear-gradient(currentColor, currentColor);
    background-position: center 100%;
    background-repeat: no-repeat;
    background-size: 0% 2px;
    transition: background-size .3s;
    color: {{ settings.light }};
}

.header > ul > li > a:hover {
    background-size: 100% 2px;
}


.header .menu-container {
    position: relative;
}

.header .menu-container .dropdown {
    display: none;
    flex-direction: column;
    padding: 15px 0 15px 17px;
    gap: 20px;
    background-color: rgba(106, 127, 167, 0.60);
}

.header .menu-container .dropdown-wrapper {
    position: absolute;
    width: 200%;
    left: 50%;
    line-height: 120%;
    transform: translateX(-50%);
    top: -12.5px;
    padding-top: 56px;
    z-index: -1;
}

.header .menu-container.more .dropdown-wrapper {
    width: 300%;
}

.header .menu-container.exclusive .dropdown-wrapper:hover .dropdown.exclusive,
.header .menu-container.exclusive:hover .dropdown.exclusive {
    display: flex;
}

.header .menu-container.more .dropdown-wrapper:hover .dropdown.more,
.header .menu-container.more:hover .dropdown.more {
    display: flex;
}

.header .menu-container.lang .dropdown-wrapper:hover .dropdown.lang,
.header .menu-container.lang:hover .dropdown.lang {
    display: flex;
}

.header .menu-container.lang .dropdown-wrapper {
    top: -4px;
}

.header .menu-container .dropdown a {
    background-image: linear-gradient(currentColor, currentColor);
    background-position: center 100%;
    background-repeat: no-repeat;
    background-size: 0% 1px;
    transition: background-size .3s;
    font-size: 14px;
    font-style: normal;
    font-weight: 600;
    cursor: pointer;
    color: {{ settings.light }};
}

.header .menu-container .dropdown a:hover {
    background-size: 100% 1px;
}

.header .menu-container .disclosure__button {
    background-color: transparent;
}

.header .search-form {
    width: 230px;
    box-sizing: border-box;
    display: flex;
    position: relative;
    align-items: center;
    transition: all ease-in-out .3s;
}

.header .search-form.closed {
    width: 32px;
}

.header .search-form > input[type="text"] {
    box-sizing: border-box;
    padding: 0;
    transition: all ease-in-out .3s;
    border: none;
    font-size: 14px;
    font-weight: 600;
    width: 100%;
    height: 32px;
    opacity: 0.75;
    padding: 0 0 0 32px;
}

.header .search-form > input[type="text"]:focus-visible {
    outline: none;
}

.header .search-form.closed > input[type="text"] {
    width: 0;
    padding: 0;
}

.header .search-form > input[type="submit"] {
    position: absolute;
    top: 50%;
    left: 0;
    transform: translateY(-50%);
    filter: invert(1);
    background-image: url('https://cdn.shopify.com/s/files/1/0668/3974/0631/files/header-search.svg?v=1698923075');
    background-position: 50% 50%;
    background-size: 70%;
    background-repeat: no-repeat;
    width: 32px;
    height: 32px;
    border: none;
    background-color: transparent;
    cursor: pointer;
    transition: all ease-in-out .3s;
}

.header .search-form.closed > input[type="submit"] {
    filter: invert(0);
    background-size: 100%;
}

.header .search-form .suggestions {
    position: absolute;
    width: 100%;
    left: 0;
    top: -8px;
    display: none;
}

.header .search-form .suggestions.opened {
    display: block;
}

.header .search-form .suggestions a {
    display: flex;
    min-height: 80px;
    padding: 8px 10px;
    box-sizing: border-box;
    gap: 10px;
    align-items: center;
    border-bottom: 3px solid var(--main-main, rgba(6, 11, 38, 0.90));
    background: #e9e9e9de;
}

.header .search-form .suggestions a img{
    display: block;
    flex-shrink: 0;
    width: 50px;
    height: 50px;
    object-fit: contain;
}

.header .search-form .suggestions a p {
    font-size: 10px;
    font-weight: 600;
    line-height: 130%;
}

.header .burger-open {
    display: none;
    width: 32px;
    height: 32px;
    background-image: url('https://cdn.shopify.com/s/files/1/0635/9783/8522/files/burger_icon_73e94b95-7c4f-424a-859f-c56a9a5d7d6f.svg?v=1700739438');
    background-position: center;
    background-size: cover;
    background-repeat: no-repeat;
    cursor: pointer;
}




@media only screen and (max-width: 600px) {
    .header {
        justify-content: space-around;
    }
    
    .header .burger-open {
        display: block;
    }

    .header .nav {
        display: none;
    }

    .header > .icons {
        gap: 0;
    }

    .header > .icons .disclosure__button {
        display: none;
    }

    .header .search-form {
        display: none;
    }
}