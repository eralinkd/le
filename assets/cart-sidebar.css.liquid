.overlay#cart-overlay {
    width: 100vw;
    height: 100vh;
    position: fixed;
    top: 0;
    left: 0;
    background-color: rgba(0, 0, 0, 0.5);
    opacity: 0;
    z-index: -1;
}

.cart-sidebar {
    position: fixed;
    right: -100vw;
    top: 0;
    height: 100vh;
    width: 34vw;
    box-sizing: border-box;
    padding: 21px 28px;
    background-color: white;
    z-index: 5;
    transition: all 0.3s;
}

.cart-sidebar > .head {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    align-items: center;
}

.cart-sidebar > .head img {
    cursor: pointer;
}

.cart-sidebar > .head > .left-section {
    display: flex;
    align-items: center;
}

.cart-sidebar > .head > .left-section p {
    font-size: 13px;
    transition: all 0.3s;
    opacity: 0;
}

.cart-sidebar > .head > .left-section img:hover + p {
    opacity: 1;
}

.cart-sidebar > .head > p {
    font-size: 28px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: {{ settings.main }};
}

.cart-sidebar > .head  > .close {
    justify-content: flex-end;
}

.cart-sidebar .products {
    margin-top: 12px;
    max-height: 65vh;
    overflow-y: scroll;
}

/* Hide scrollbar for Chrome, Safari and Opera */
.cart-sidebar .products::-webkit-scrollbar {
	display: none !important;
}
  
/* Hide scrollbar for IE, Edge and Firefox */
.cart-sidebar .products {
	-ms-overflow-style: none !important;  /* IE and Edge */
	scrollbar-width: none !important;  /* Firefox */
}

.cart-sidebar .products > div {
    display: flex;
    /* justify-content: space-between; */
    padding: 18px 24px 18px 0;
    gap: 20px;
    position: relative;
}

.cart-sidebar .products > div:not(:first-of-type) {
    margin-top: 18px;
}

.cart-sidebar .products > div::after {
    position: absolute;
    bottom: -13px;
    left: 50%;
    transform: translateX(-50%);
    content: "";
    display: block;
    margin: auto;
    width: 85%;
    height: 3px;
    background-color: {{ settings.main }};
}

.cart-sidebar .products p {
    font-size: 18px;
    font-weight: 500;
    color: {{settings.main}};
}

.cart-sidebar .products p.empty {
    margin: 60px 0 30px 0;
    text-align: center;
    font-size: 22px;
    font-weight: 600;
    color: {{settings.main}};
}

.cart-sidebar .products .image {
    display: block;
    object-fit: contain;
    flex: 0 0 10.5vw;
    height: 15vh;
}

.cart-sidebar .products .info {
    display: flex;
    justify-content: space-evenly;
    flex-direction: column;
    flex-grow: 1;
    gap: 14px;
}

.cart-sidebar .products .info .price {
    display: flex;
    justify-content: space-between;
}

.cart-sidebar .products .info .price a {
    display: block;
    transition: all 0.5s;
    cursor: pointer;
    color: {{settings.main-inactive-icons}};
}

.cart-sidebar .products .info .price a:hover {
    color: {{settings.accent}}
}

.cart-sidebar > .total {
    margin-top: 28px;
    display: flex;
    justify-content: space-between;
}

.cart-sidebar > .total p {
    font-size: 22px;
    font-weight: 600;
    color: {{settings.main}};
}

.cart-sidebar > .tax {
    margin-top: 15px;
    font-size: 14px;
    color: {{settings.main-inactive-icons}}
}

.cart-sidebar > .tax a {
    text-decoration: underline;
}

.cart-sidebar > .checkout {
    display: flex;
    width: 70%;
    margin: auto;
    margin-top: 20px;
    box-sizing: border-box;
    padding: 22px 0;
    justify-content: center;
    font-size: 24px;
    font-style: normal;
    font-weight: 700;
    transition: all ease-out 0.6s;
    color: {{ settings.light }};
    background-color: {{settings.main}};
}

.cart-sidebar > .checkout:hover {
    background-color: {{ settings.secondary }};
    color: {{ settings.main }};
}


.cart-sidebar > .checkout:active {
    color: {{ settings.light }};
    background-color: {{ settings.dark }};
}

@media only screen and (max-width: 600px) {
    .cart-sidebar {
        width: 90vw;
        padding: 20px;
    }

    .cart-sidebar .products>div {
        padding: 9px 9px 9px 0;
        gap: 10px;
    }

    .cart-sidebar .products .image {
        flex: 0 0;
        width: 105px;
        max-height: 93px;
    }

    .cart-sidebar .products p {
        font-size: 12px;
    }

    .cart-sidebar .products .info .price a {
        font-size: 12px;
    }

    .cart-sidebar>.total p {
        font-size: 20px;
    }

    .cart-sidebar>.tax {
        margin-top: 11px;
        font-size: 12px;
    }

    .cart-sidebar>.checkout {
        margin: 25px auto auto;
        font-size: 21px;
    }
}