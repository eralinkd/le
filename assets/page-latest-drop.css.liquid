.page-latest-drop .shop-section {
    padding-top: 148px;
}

.page-latest-drop .shop-section .products h1 {
    text-align: center;
    margin-bottom: 50px;
}

.page-latest-drop .shop-section .products h1 span {
    font-size: 32px;
    font-weight: 600px;
    transition: all ease-in-out .3s;
    position: relative;
    color: {{ settings.main }};
}

.page-latest-drop .shop-section .products h1 span::after {
    content: "";
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    width: 110%;
    bottom: -4px;
    height: 3px;
    background-color: {{ settings.main }};
}